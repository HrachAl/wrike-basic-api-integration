{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",             // Use 'ESNext' for ES Module syntax
      "moduleResolution": "node",     // Set module resolution strategy
      "strict": true,
      "esModuleInterop": true,        // Allows default imports from CommonJS modules
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  